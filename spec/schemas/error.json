{
  "type": "object",
  "required": ["status", "code", "message", "details"],
  "properties": {
    "status": {
      "type": "integer",
      "enum": [401, 404, 422, 500]
    },
    "code": {
      "type": "string",
      "enum": [
        "unauthorized",
        "not_found",
        "input_errors",
        "too_early",
        "internal_server_error"
      ]
    },
    "message": { "type": "string" },
    "details": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "code"],
        "properties": {
          "field": {
            "type": "string"
          },
          "code": {
            "type": "string",
            "enum": [
              "required",
              "not_found",
              "wrong",
              "already_taken",
              "too_short",
              "passwords_are_not_equal"
            ]
          }
        }
      }
    }
  }
}
